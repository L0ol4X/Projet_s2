<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app.Head">
    
    
    <Grid VerticalOptions="Start" ColumnDefinitions="Auto, *, auto" 
          BackgroundColor="{StaticResource Primary}"
          HeightRequest="65">
        <ImageButton Source="menu.png"
                Grid.Column="0"
                Clicked="ImageButton_Clicked"
                Style="{StaticResource buttonHeader}"
               />
        <Label Style="{StaticResource centerText}"               
               Grid.Column="1"/>
        <HorizontalStackLayout Grid.Column="2" Spacing="15">
            <Button ImageSource="inscr.png"
                    Style="{StaticResource buttonHeader}"
                    Clicked="Inscription_Clicked"/>
            <Button ImageSource="co.png"
                    Style="{StaticResource buttonHeader}"
                    Clicked="Connexion_Clicked"/>
        </HorizontalStackLayout>
        

    </Grid>
</ContentView>
